# Server settings
NODE_ENV=development
PORT=3000

# Database settings
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ajiro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ajiro
DB_USER=postgres
DB_PASSWORD=postgres

# Redis settings
REDIS_URL=redis://localhost:6379

# JWT settings
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=*
